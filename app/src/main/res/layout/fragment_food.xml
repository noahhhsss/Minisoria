<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".food">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="1dp"
        android:paddingBottom="16dp">

        <!-- Title -->
        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:text="Food and drinks"
            android:textStyle="bold"
            android:textColor="@color/black" />

        <!-- Row of products -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <!-- Product 1 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginEnd="16dp"
                android:gravity="center_horizontal">

                <FrameLayout
                    android:layout_width="170dp"
                    android:layout_height="200dp">

                    <ImageView
                        android:id="@+id/product"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/product" />

                    <ImageView
                        android:id="@+id/accessories1"
                        android:layout_width="150dp"
                        android:layout_height="140dp"
                        android:layout_marginTop="25dp"
                        android:layout_marginLeft="9dp"
                        android:padding="5dp"
                        android:background="@drawable/snowflakenougat" />

                    <!-- Top label inside FrameLayout -->
                    <TextView
                        android:id="@+id/topLabel1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Snowflake"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:layout_gravity="top|center_horizontal" />

                    <!-- Price at bottom of image -->
                    <TextView
                        android:id="@+id/textOnImage1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="₱5.0"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:layout_marginTop="170dp"
                        android:layout_marginLeft="70dp" />
                </FrameLayout>
            </LinearLayout>

            <!-- Product 2 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <FrameLayout
                    android:layout_width="170dp"
                    android:layout_height="200dp">

                    <ImageView
                        android:id="@+id/product2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/product" />

                    <ImageView
                        android:id="@+id/accessories2"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_marginTop="23dp"
                        android:layout_marginLeft="9dp"
                        android:padding="5dp"
                        android:background="@drawable/thickmilo" />

                    <!-- Top label inside FrameLayout -->
                    <TextView
                        android:id="@+id/topLabel2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thick Milo"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:layout_gravity="top|center_horizontal" />

                    <!-- Price at bottom of image -->
                    <TextView
                        android:id="@+id/textOnImage2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="₱15.0"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:layout_marginTop="170dp"
                        android:layout_marginLeft="70dp" />
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
