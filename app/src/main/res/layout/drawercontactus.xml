<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/roundbluedashboard"/>

            <ImageView
                android:id="@+id/menubtn"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginRight="300dp"
                app:srcCompat="@drawable/drawer"/>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:textSize="30dp"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:text="Contact Us"/>
        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/main_color"
            android:textStyle="bold"
            android:textSize="40dp"
            android:gravity="center"
            android:layout_marginTop="100dp"
            android:text="Get In Touch">
        </TextView>
        <TextView
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:text="If you have any requieries get in touch with us we'll be happy to help you"
            android:textSize="20dp"
            android:layout_marginLeft="30dp"
            android:textColor="@color/main_color"
            android:textStyle="bold">

        </TextView>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="300dp"
                android:layout_height="70dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="50dp"
                app:srcCompat="@drawable/contactuss"/>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/phone"
                android:layout_marginTop="35dp"
                android:layout_marginLeft="70dp"/>

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:layout_marginStart="120dp"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:text="+(917) 555-6832"/>

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="300dp"
                android:layout_height="70dp"
                android:layout_marginTop="110dp"
                android:layout_marginStart="50dp"
                app:srcCompat="@drawable/contactuss"/>

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="120dp"
                android:layout_marginStart="65dp"
                android:background="@drawable/email"/>

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="130dp"
                android:layout_marginStart="130dp"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:text="Minisoria@gmail.com"/>

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="300dp"
                android:layout_height="70dp"
                android:layout_marginTop="200dp"
                android:layout_marginStart="50dp"
                app:srcCompat="@drawable/contactuss"/>

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginTop="213dp"
                android:layout_marginStart="65dp"
                android:background="@drawable/facebook"/>

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="220dp"
                android:layout_marginStart="115dp"
                android:textSize="19dp"
                android:textColor="@color/black"
                android:text="Minisoria@facebook.com"/>

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="300dp"
                android:layout_height="70dp"
                android:layout_marginTop="290dp"
                android:layout_marginStart="50dp"
                app:srcCompat="@drawable/contactuss"/>
            <ImageView
                android:id="@+id/imageView21"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginTop="303dp"
                android:layout_marginStart="65dp"
                android:background="@drawable/instagram"/>

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="310dp"
                android:layout_marginStart="113dp"
                android:textSize="19dp"
                android:textColor="@color/black"
                android:text="Minisoria@instagram.com"/>


        </FrameLayout>


    </LinearLayout>



    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/white">

        <include layout="@layout/navdrawer"/>

    </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>
