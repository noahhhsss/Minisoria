<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@drawable/clothes"
            android:layout_marginEnd="16dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â‚±5.00"
                android:textSize="20sp"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Material"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="10dp"/>

    <RadioGroup
        android:id="@+id/materialGroup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/customizeBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/cornerradius"
            android:padding="12dp"
            android:layout_marginTop="16dp"
            android:button="@drawable/dropdown"
            android:text="Package 1"
            android:textSize="15dp"
            android:textStyle="bold"/>

        <RadioButton
            android:id="@+id/cusBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/cornerradius"
            android:padding="12dp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="2dp"
            android:button="@drawable/dropdown"
            android:text="Package 2"
            android:textSize="15dp"
            android:textStyle="bold"/>

    </RadioGroup>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quantity"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/decreaseButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:layout_marginLeft="155dp"
            android:text="-"
            android:textSize="30dp"
            android:background="@color/white"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/quantityText"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:text="1"
            android:textSize="26sp"
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/increaseButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:text="+"
            android:textSize="25sp"
            android:background="@color/white"
            android:textColor="@color/black"/>

    </LinearLayout>

    <!-- Buy Now Button -->
    <Button
        android:id="@+id/addtocart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add to cart"
        android:backgroundTint="@color/main"
        android:textColor="@color/white"
        android:layout_marginTop="16dp" />
</LinearLayout>