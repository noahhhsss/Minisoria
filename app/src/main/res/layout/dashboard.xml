<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="10dp"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="232dp"
        android:background="@drawable/roundbluedashboard">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/menubtn"
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:srcCompat="@drawable/drawer" />



            <ImageView
                android:id="@+id/cart"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="18dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/v1" />

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="80dp">

            <TextView
                android:id="@+id/CATEGORIES"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CATEGORIES"
                android:textColor="#eaf5ff"
                android:layout_marginLeft="25dp"
                android:fontFamily="@font/poppins_bold"
                android:textSize="40dp"
                android:layout_marginTop="40dp"/>

            <TextView
                android:id="@+id/minisoria1"
                android:layout_width="330dp"
                android:layout_height="40dp"
                android:layout_marginLeft="25dp"
                android:layout_weight="1"
                android:fontFamily="@font/poppins_bold"
                android:text="Minisoria"
                android:textColor="#eaf5ff"
                android:textSize="35dp"/>

            <Button
                android:id="@+id/accesories"
                android:layout_width="148dp"
                android:layout_height="45dp"
                android:layout_marginTop="105dp"
                android:text="ACCESSORIES"
                android:textColor="#0d522c"
                android:textSize="18dp"
                android:textStyle="bold"
                android:background="@drawable/cartcorner"/>


            <Button
                android:id="@+id/caricature"
                android:layout_width="150dp"
                android:layout_height="45dp"
                android:layout_marginTop="105dp"
                android:layout_marginLeft="145dp"
                android:textColor="#0d522c"
                android:textSize="18dp"
                android:textStyle="bold"
                android:background="@drawable/cartcorner"
                android:text="CARICATURE"/>


            <Button
                android:id="@+id/food"
                android:layout_width="120dp"
                android:layout_height="45dp"
                android:layout_marginTop="105dp"
                android:layout_marginLeft="290dp"
                android:textColor="#0d522c"
                android:textSize="18dp"
                android:textStyle="bold"
                android:background="@drawable/cartcorner"
                android:text="FOOD"/>

        </FrameLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fragmentContainerView"
            android:name="com.example.minisoria.AccessoriesFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>
