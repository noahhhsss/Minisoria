<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Selected state -->
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="#2196F3" /> <!-- Fill color when selected -->
            <stroke android:width="2dp" android:color="@color/main_color" /> <!-- Stroke when selected -->
            <corners android:radius="12dp" />
        </shape>
    </item>

    <!-- Default state (not selected) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" /> <!-- Transparent background -->
            <stroke android:width="2dp" android:color="@color/main_color" /> <!-- Stroke when not selected -->
            <corners android:radius="12dp" />
        </shape>
    </item>
</selector>
